<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root prefWidth="700.0" styleClass="vbox-base" stylesheets="@../css/DialogStack.css" type="VBox"
         xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <Label alignment="CENTER" prefHeight="21.0" prefWidth="700.0" text="%project.select_system_libraries">
      <font>
        <Font size="18.0"/>
      </font>
      <VBox.margin>
        <Insets bottom="15.0"/>
      </VBox.margin>
    </Label>
    <HBox alignment="CENTER" prefHeight="10.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="ALWAYS">
      <children>
        <Label alignment="CENTER" prefWidth="330.0" text="%project.available_libraries" HBox.hgrow="ALWAYS"/>
        <Label alignment="CENTER" prefWidth="330.0" text="%project.used_libraries" HBox.hgrow="ALWAYS"/>
      </children>
      <VBox.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER" prefHeight="350.0" prefWidth="350.0" spacing="10.0" VBox.vgrow="ALWAYS">
      <children>
        <ListView fx:id="lvAvailableLibs" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="50.0" spacing="5.0" HBox.hgrow="SOMETIMES">
          <children>
            <Button onAction="#onPushAll" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0">
              <graphic>
                <FontIcon iconLiteral="mdi-chevron-double-right" iconSize="26"/>
              </graphic>
            </Button>
            <Button onAction="#onPushSelected" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0">
              <graphic>
                <FontIcon iconLiteral="mdi-chevron-right" iconSize="26"/>
              </graphic>
            </Button>
            <Pane prefHeight="25.0" prefWidth="200.0"/>
            <Button onAction="#onPushSelected" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0">
              <graphic>
                <FontIcon iconLiteral="mdi-chevron-left" iconSize="26"/>
              </graphic>
            </Button>
            <Button onAction="#onPushAll" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0">
              <graphic>
                <FontIcon iconLiteral="mdi-chevron-double-left" iconSize="26"/>
              </graphic>
            </Button>
          </children>
          <HBox.margin>
            <Insets top="30.0"/>
          </HBox.margin>
        </VBox>
        <ListView fx:id="lvUsedLibs" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
      </children>
      <VBox.margin>
        <Insets bottom="10.0" left="10.0" right="10.0"/>
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER" spacing="2.0" VBox.vgrow="ALWAYS">
      <children>
        <Button alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#onBtnBack" HBox.hgrow="NEVER">
          <graphic>
            <FontIcon iconColor="red" iconLiteral="gmi-arrow-back" iconSize="24"/>
          </graphic>
        </Button>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnNext" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#onBtnNext"
                HBox.hgrow="NEVER">
          <graphic>
            <FontIcon fx:id="fiNext" iconColor="green" iconLiteral="gmi-arrow-forward" iconSize="24"/>
          </graphic>
        </Button>
      </children>
      <padding>
        <Insets bottom="4.0" left="2.0" right="2.0" top="12.0"/>
      </padding>
    </HBox>
  </children>
  <padding>
    <Insets top="10.0"/>
  </padding>
</fx:root>
